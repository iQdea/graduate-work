extends ../layout.pug

block contentBody
  tbody
    tr(style='box-shadow: 0px 4px 20px rgb(0 0 0 / 8%)')
      td
        table(width='100%' border='0' cellpadding='0' cellspacing='0')
          tbody
            tr
              td.logo(align='left' valign='top' style='padding-top: 20px; padding-right: 30px; padding-bottom: 20px; padding-left: 30px;')
                img(src='https://564722.selcdn.ru/dev-qvedo-api-media-images/f5cfd890-7f96-4b31-9fe3-236601ddb79c.s.png' alt='Qvedo' border='0' width='138px' height='30px' style='display: block;')
              td(align='right')
                center
                  table.header-right(width='100%' border='0' cellpadding='0' cellspacing='0' style='padding-top: 16px; padding-bottom: 16px; padding-right: 30px; padding-left: 0; margin: 0; width: 100%;')
                    tbody
                      tr
                        td(align='right' style='font-family: Arial,sans-serif; font-size: 12px; color: #3C3C47;')
                          a.btn.btn--outline(href='#' style='color: #24B0FF;') Личный кабинет
                          // /.btn btn--outline
    tr
      td
        table.table-text(width='100%' border='0' cellpadding='0' cellspacing='0')
          tbody
            tr
              td
                table(width='100%' border='0' cellpadding='0' cellspacing='0' style='padding: 0;')
                  tbody
                    tr
                      td
                        h4(style='color: #3C3C47; margin-top: 0;') Здравствуйте, #{username}!
                        p(style='color: #3C3C47;')
                          | Спасибо, что пользуетесь QVEDO. Ваш заказ
                          a(href='#' style='color: #3C3C47;') #{offer_id}
                          |  успешно оплачен.
                    tr
                      td
                        .table-style(style='padding-left: 0; padding-right: 0;')
                          div
                            table(width='100%' border='0' cellpadding='0' cellspacing='0' style='color: #3C3C47;')
                              thead(style='background-color: #24B0FF; margin-bottom: 10px; display: block;')
                                tr
                                  td(colspan='2')
                                    h4(style='color: #fff')
                                      | Квитанция #{receipt_id}
                              tbody
                                tr
                                  td(align='center')
                                    div
                                      span(style='text-align: left;') Сумма
                                      span(style='text-align: right;') #{transaction_amount} ₽
                                tr
                                  td(align='center')
                                    div
                                      span(style='text-align: left;') Дата и время операции
                                      span(style='text-align: right;') #{transaction_date} #{transaction_time}
                                tr
                                  td(align='center')
                                    div
                                      span(style='text-align: left;') Номер транзакции
                                      span(style='text-align: right;') #{transaction_id}
                                tr
                                  td(align='center')
                                    div
                                      span(style='text-align: left;') Способ оплаты
                                      span(style='text-align: right;') #{transaction_way}
                                tr
                                  td(align='center')
                                    div
                                      span(style='text-align: left;') Номер карты
                                      span(style='text-align: right;') #{card_number}
block contentFooter
  include ../partials/footer.pug
